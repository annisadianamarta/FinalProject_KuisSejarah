<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ylow"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="KUIS SEJARAH"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#ffff33"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/peta"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:src="@drawable/peta"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linePilGan"
        android:layout_below="@id/peta"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:src="@drawable/pg1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="START"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#ffff33"
            android:textSize="30sp"/>
    </LinearLayout> />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GOOD LUCK!"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/linePilGan"
        android:background="#ffff33"
        android:textSize="30sp"/>

</RelativeLayout>


